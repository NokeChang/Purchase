<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#f8ff9d</item>
    </style>
    
    <style name="DataText">
        <item name="android:text">N/A</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textSize">@dimen/holder_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleText">
        <item name="android:text">N/A</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/holder_text_size_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="InputElement">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="MyDialogTheme" parent="Base.V7.Theme.AppCompat.Dialog">
        <item name="android:colorBackground">#5b102f</item>
        <item name="android:windowTitleStyle">@style/MyTitleStyle</item>
    </style>
    <style name="MyTitleStyle" parent="Base.DialogWindowTitle.AppCompat">
        <item name="android:background">#3b2d36</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
